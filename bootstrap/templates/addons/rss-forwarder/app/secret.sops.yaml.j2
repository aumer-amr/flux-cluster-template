---
apiVersion: v1
kind: Secret
metadata:
  name: rss-forwarder-secret
  namespace: default
type: Opaque
stringData:
  config.toml: |-
    [feeds.github-template]
    url = "https://github.com/onedr0p/flux-cluster-template/commits/main/.atom"
    interval = "10m"
    retry_limit = 5
    sink.type = "discord"
    sink.url = "{{ rss_forwarder.discord_webhook_url }}"
